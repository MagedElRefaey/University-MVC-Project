@model IEnumerable<User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewUserView</title>
</head>
<body>


    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>UserPassword</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.UserName</td>
                    <td>@item.UserPassword</td>

                    <td>
                        <a asp-action="RegisterRole" asp-route-id="item.UserId" class="text-danger">Regsiter User Role</a>
                    </td>
                </tr>
            }
            }
            else
            {
            <tr>
            <td colspan="3"> No Students</td>
            </tr>
            } 
        </tbody>
    </table>

</body>
</html>