@model IEnumerable<Role>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewUserView</title>
</head>
<body>

    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoleName</th>
               @*  <th>UserId</th> *@
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        @* <td>@item.UserId</td> *@
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3"> No Students</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
