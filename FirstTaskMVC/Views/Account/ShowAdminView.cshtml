@model IEnumerable<Role>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewUserView</title>
</head>
<body>

    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoleName</th>
                @*  <th>UserId</th> *@
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        <td> <a href="/Account/ShowUserRoles/@item.RoleId" class="text-danger">Show Participants</a></td>
                        <td> <a href="/Account/ManageUsers/@item.RoleId" class="text-danger">Manage Users</a></td>
                        @* <td>@item.UserId</td> *@
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3"> No Students</td>
                </tr>
            }
            @* <h1> <a asp-action="ManageUsers" asp-controller="Account"> Add User </a></h> *@
        </tbody>
    </table>

</body>
</html>
